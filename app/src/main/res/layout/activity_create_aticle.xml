<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:weightSum="3"
     >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="left"
           android:paddingLeft="16dp">
        <ImageView
            android:id="@+id/create_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"

            />
       </LinearLayout>
        <TextView
            android:id="@+id/create_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="写新故事"
            android:gravity="center"/>
        <TextView
            android:id="@+id/create_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="提交"
            android:gravity="right|center"
            android:paddingRight="16dp"
            android:textColor="#0cefbe"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/second_ring_ling"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/second_ring"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ring_gray"/>
        <LinearLayout
            android:id="@+id/second_line"
            android:layout_width="1dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:background="#bcbcbc"
            android:layout_gravity="center_horizontal"
            ></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/second_ring_ling">
            <TextView
                android:id="@+id/create_cover_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="封面"/>
            <android.support.v7.widget.CardView
                android:id="@+id/create_cover_cardview"

                android:layout_width="230dp"
                android:layout_height="300dp"
                android:layout_below="@id/create_cover_text"
                app:cardBackgroundColor="#ffffff"
                app:cardElevation="10dp"
                android:layout_marginTop="10dp">



                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/create_cover_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="#33cacac6"/>
                <TextView
                    android:id="@+id/create_cover_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="请输入标题"
                    android:textSize="12dp"
                    android:background="@null"
                    android:layout_marginTop="175dp"
                    />
                    <LinearLayout
                        android:layout_marginTop="195dp"
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#e7e1e1"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="205dp">
                        <ImageView
                            android:id="@+id/create_cover_kind_ring"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ring_gray" />
                        <TextView
                            android:id="@+id/create_cover_kind_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分类"
                            android:paddingLeft="5dp"/>

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="245dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/create_cover_head"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                         />
                    <TextView
                        android:id="@+id/create_cover_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:paddingLeft="5dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>







        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/first_ring_ling"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/first_ring"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ring_gray"/>
                <LinearLayout
                    android:id="@+id/first_line"
                    android:layout_width="1dp"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:background="#bcbcbc"
                    android:layout_gravity="center_horizontal"
                    ></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/first_ring_ling">
                <TextView
                    android:id="@+id/create_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开头"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/create_content_cardview"
                    android:layout_width="230dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/create_content_text"
                    app:cardBackgroundColor="#ffffff"
                    app:cardElevation="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/create_content_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="请输入内容"
                        android:textSize="12dp"
                        android:background="@null"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>
