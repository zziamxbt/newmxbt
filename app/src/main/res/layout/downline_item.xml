<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/downline_back"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downline_tt"
            android:text="离线阅读"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="6">
       <com.example.acer.zzia_mxbt.utils.RoundImageview
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:id="@+id/downline_head"
           android:src="@drawable/bb"
           android:scaleType="fitXY"
           app:roundwidth="20dp"
           app:roundheight="20dp"
           android:layout_alignTop="@+id/downline_name"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_marginLeft="28dp"
           android:layout_marginStart="28dp" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/downline_name"
           android:text="杨顺顺"
           android:layout_marginTop="31dp"
           android:layout_alignParentTop="true"
           android:layout_toRightOf="@+id/downline_head"
           android:layout_toEndOf="@+id/downline_head"
           android:layout_marginLeft="30dp"
           android:layout_marginStart="30dp" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/downline_kind"
           android:text="创作"
           android:layout_marginRight="34dp"
           android:layout_marginEnd="34dp"
           android:layout_below="@+id/downline_name"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:id="@+id/downline_coverimg"
           android:scaleType="fitXY"
           android:layout_marginTop="33dp"
           android:layout_below="@+id/downline_head"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:src="@drawable/fengjing"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/downline_title"
           android:text="醉画仙"
           android:layout_marginTop="35dp"
           android:layout_below="@+id/downline_coverimg"
           android:layout_toRightOf="@+id/downline_name"
           android:layout_toEndOf="@+id/downline_name" />
   </RelativeLayout>


</LinearLayout>