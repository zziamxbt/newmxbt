<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:background="@color/back_gray">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/andwrite_isfinish"
        android:text="故事类型设置"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"

       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/andwrite_contiue"
        android:text="连载中"
        android:background="@drawable/author_anniu"
        android:layout_marginLeft="105dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/andwrite_finish"
        android:text="已完结"
        android:layout_gravity="right"
        android:background="@drawable/anniu2"


        android:layout_alignTop="@+id/andwrite_contiue"
        android:layout_toRightOf="@+id/andwrite_contiue"
        android:layout_toEndOf="@+id/andwrite_contiue" />




</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_deep_teal_500"
            android:text="预览"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:id="@+id/andwrite_preview"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="|"
            android:gravity="center_horizontal"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/material_deep_teal_500"
            android:text="发布"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:id="@+id/andwrite_publish"/>
    </LinearLayout>
</LinearLayout>