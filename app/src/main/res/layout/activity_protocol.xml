<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qiyu.regist.ProtocolActivity">
    <!--返回键-->
    <ImageView
        android:id="@+id/protocol_returnback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back" />

    <!--协议文本-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:text="用户许可协议"
        android:textSize="18sp" />

    <!--滚动文本-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protocol_returnback"
        android:layout_marginTop="15dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="outsideOverlay">

        <!--文本内容在string.xml-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/protocol_bk">
        <Button
            android:id="@+id/protocol_sure"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/middle"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/regist_button"
            android:text="确定"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>
